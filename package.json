{
  "name": "frontend-server",
  "version": "0.0.1",
  "description": "The frontend server",
  "main": "index.js",
  "scripts": {
    "build:spa": "cross-env SPA=1 webpack --config ./build/webpack.js",
    "build:ssr": "cross-env SSR=1 webpack --config ./build/webpack.js",
    "build:ssr:server": "webpack --config ./build/webpack.ssr.server.js",
    "build:ssr:client": "webpack --config ./build/webpack.ssr.client.js",
    "spa": "npm run build:spa && cross-env SPA=1 node ./server",
    "ssr": "npm run build:ssr && cross-env SSR=1 node ./server",
    "dev:spa": "cross-env SPA=1 webpack-dev-server --content-base dist --config ./build/webpack.js",
    "dev:ssr": "cross-env SSR=1 webpack-dev-server --content-base dist --config ./build/webpack.js",
    "eslint": "node ./build/eslint.js",
    "api": "node ./api/server.js",
    "proxy:up": "docker-compose -p frontend-proxy -f ./docker/docker-compose.yml up --detach --build",
    "proxy:down": "docker-compose -p frontend-proxy -f ./docker/docker-compose.yml down",
    "proxy:start": "docker-compose -p frontend-proxy -f ./docker/docker-compose.yml start",
    "proxy:stop": "docker-compose -p frontend-proxy -f ./docker/docker-compose.yml stop",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "sashmlv",
  "license": "UNLICENSE",
  "devDependencies": {
    "chalk": "^4.1.0",
    "copy-webpack-plugin": "^6.3.0",
    "cross-env": "^7.0.2",
    "css-loader": "^5.0.1",
    "eslint": "^7.13.0",
    "eslint-config-3-spaces": "git+https://github.com/sashmlv/eslint-config-3-spaces.git",
    "eslint-plugin-sonarjs": "^0.5.0",
    "eslint-plugin-svelte3": "^2.7.3",
    "mini-css-extract-plugin": "^1.3.0",
    "page": "^1.11.6",
    "remove-files-webpack-plugin": "^1.4.4",
    "svelte": "^3.29.4",
    "svelte-loader": "^2.13.6",
    "webpack": "^4.44.2",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0",
    "webpack-merge": "^5.3.0",
    "webpack-node-externals": "^2.5.2"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "bootstrap": "^5.0.0-alpha2",
    "cookie-parser": "^1.4.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-pino-logger": "^5.0.0",
    "pino": "^6.7.0"
  }
}
